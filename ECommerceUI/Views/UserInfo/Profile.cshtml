
@{
    ViewBag.Title = "Profile";
}
@using Entities
@using PagedList.Mvc;
@model  PagedList.IPagedList<Orders>
<section id="main" class="page ">
    <header class="page-header">
        <div class="container">
            <h1 class="title">Siparişlerim</h1>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <article class="col-sm-9 col-md-9 content">
                <div class="my-account">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered text-left my-orders-table">
                            <thead>
                                <tr class="first last">
                                    <th>#</th>
                                    <th>Tarih</th>
                                    <th>Alıcı</th>
                                    <th><span class="nobr">Fiyat</span></th>
                                    <th>Durum</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.OrdderId</td>
                                        <td>@item.CreationDate</td>
                                        <td>@item.UserName</td>
                                        <td><span class="price">@item.OrdderAmount ₺</span></td>
                                        <td class="text-success"><em>Tamamlandı</em></td>
                                        <td class="text-center last">
                                            <div class="btn-group">
                                                <a href="/Order/OrderInfo?id=@item.OrdderId" class="btn btn-sm btn-info">Sipariş Detayı</a>
                                            
                                            </div>
                                        </td>
                                    </tr>

                                }
                         
                         
                            </tbody>
                        </table>
                    </div>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.Classic)
                </div>
            </article><!-- .content -->

